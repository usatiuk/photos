{
    "compilerOptions": {
        "lib": [
            "es2017",
            "dom"
        ],
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "isolatedModules": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./jest.config.js"
    ]
}