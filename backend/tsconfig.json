{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "~*": [
                "./*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./tests/**/*.ts",
    ],
    "exclude": [
        "frontend"
    ]
}